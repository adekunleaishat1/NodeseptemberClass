<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <form class="w-50 mx-auto px-3 py-3 shadow" action="/addlist" method="post">
        <h1>Shopping List</h1>
       <input  class="form-control mt-3" name="item" type="text" placeholder="Item">
       <input id="price"   class="form-control mt-3" name="price" type="number" placeholder="Price">
       <input  id="quantity"  class="form-control mt-3" name="quantity" type="number" placeholder="Quantity">
       <input  id="amount"  class="form-control mt-3" name="amount" type="number" placeholder="Amount">
       <button class="btn btn-dark mt-3" type="submit">Add Item</button>
   </form>
   <table class="table w-50 mx-auto shadow mt-3">
    <thead>
        <tr>
            <td>Item</td>
            <td>Price</td>
            <td>Quantity</td>
            <td>Amount</td>
            <td>Check</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        
            <% shoplist.forEach(element => { %>
                <tr>
                <td><%= element.item %></td>
                <td><%= element.price %></td>
                <td><%= element.quantity %></td>
                <td><%= element.amount %></td>
                <td>
                    <form action="/update/<%= element._id %>" method="post">
                        
                        <button class="border border-0 bg-white" id="but" type="submit">
                            <% if (element.completed == true) { %> 
                                <input checked  value="true" id="completed" type="checkbox" name="completed" >
                            <% }else{ %>
                                <input   value="true" id="completed" type="checkbox" name="completed" >
                            <% } %>
                            
                        </button>
                    </form>
                </td>
                <td>
                    <form action="">
                        <button>Delete</button>
                    </form >
                  
                </td>
            </tr>
                
             <% }) %>

        
    </tbody>
   </table>
    
</body>
</html>
<script>
   let price =  document.getElementById("price")
   let quantity =  document.getElementById("quantity")
   let amount = document.getElementById("amount")

   quantity.addEventListener("input",()=>{
     let subtotal = parseInt(price.value * quantity.value)
     amount.value = subtotal
   })
   document.getElementById("completed").addEventListener("input",()=>{
      document.getElementById("but").click()
   })
  

</script>